<section id="user_messages">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="user_messages_div">
          <br />
          <h4>Contact Yogalit Directly 24/7:</h4>
          <%= form_for(@user_message) do |f| %>
            <%= f.label :email %>
            <% if user_signed_in? %>
              <%= f.text_field :email, value: current_user[:email] %>
            <% else %>
              <%= f.text_field :email %>
            <% end %>
            <br />
            <%= f.label :subject %>
            <%= f.text_field :subject %>
            <br />
            <%= f.label :message %>
            <%= f.text_area :message %>
            <br />
            <div class="user_messages_btn_div">
              <button>Send</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="bottom_contact_div"></div>
      </div>
    </div>
  </div>
</section>
