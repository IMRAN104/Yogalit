<h1>Student Edit Profile</h1>

<%= form_for(@student) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br />
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br />
  <%= f.label :timezone %>
  <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, {default: @student[:timezone]}, class:"browser-default" %>
  <small>If TimeZone is changed, any previous YogaSession booked will remain in the time zone selected at that time.</small>
  <br />
  <br />
  <%= f.submit "Submit", class:"btn" %>
<% end %>
