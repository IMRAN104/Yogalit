<style>
  table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      text-align: center;
  }

  tr:nth-child(even) {
      background-color: #dddddd;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col s12">
      <br />
      <h1>Student Dashboard</h1>

      <h3>Student Profile</h3>
      <p>First: <%= @student[:first_name] %></p>
      <p>Last: <%= @student[:last_name] %></p>
      <p>Phone: <%= @student[:phone] %></p>
      <%= link_to "Edit Profile", edit_student_path(@student) %><br />
      <%= link_to "Edit Sign-In", edit_user_registration_path %>

      <h3>Search for a Yoga Teacher</h3>
      <%= render partial: "shared/yoga_teacher_search_form" %>
      <br />
      <h3>Upcoming YogaSessions</h3>
      <% if @upcoming_yoga_sessions == "no-upcoming-sessions" %>
        <h5>No upcoming Yoga-Sessions</h5>
      <% else %>
        <table>
          <tr>
            <th>Teacher's Name</th>
            <th>Date</th>
            <th>Day Of Week</th>
            <th>Time Frame</th>
            <th>Duration</th>
            <th>Time Zone</th>
            <th></th>
          </tr>
          <% @upcoming_yoga_sessions.each do |k, v| %>
            <tr>
              <td><%= "#{v['first_name'].capitalize} #{v['last_name'].capitalize}" %></td>
              <td><%= v["date"] %></td>
              <td><%= v["day_of_week"] %></td>
              <td><%= v["time_range"] %></td>
              <td><%= v["duration"] %> min</td>
              <td><%= v["timezone"] %></td>
              <td><%= link_to "Join", live_yoga_session_path(id: v["yoga_session_id"]) %></td>
            </tr>
          <% end %>
        </table>
      <% end %>

      <% if !@favorite_teachers.blank? %>
        <h3>My Favorite Yoga Teachers</h3>
        <small>Click on a Teacher's name to begin scheduling!</small>
        <br />
        <br />
        <% @favorite_teachers.each do |ft| %>
          <a class="waves-effect waves-light btn" href="<%= teacher_profile_path(id: ft[:id]) %>">
            <%= "#{ft[:first_name].capitalize} #{ft[:last_name].capitalize}" %>
          </a>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal').modal();
  });
</script>
