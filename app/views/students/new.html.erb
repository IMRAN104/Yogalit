<div class="container">
  <div class="row">
    <div class="col s12">
      <br />
      <h1>New Student</h1>
      <%= form_for(@student) do |f| %>
      <%= f.label :first_name %>
      <br />
      <%= f.text_field :first_name, required: true %>
      <br />
      <%= f.label :last_name %>
      <br />
      <%= f.text_field :last_name %>
      <br />
      <%= f.label :phone %>
      <br />
      <%= f.text_field :phone %>
      <br />
      <br />
      <%= f.submit "Submit", class:'btn' %>
        <br />
      <% end %>
    </div>
  </div>
</div>
