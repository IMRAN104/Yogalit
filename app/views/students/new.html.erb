<div class="container">
  <div class="row">
    <div class="col s12">
      <h1>New Student</h1>
      <%= form_for(@student) do |f| %>
      <%= f.label :first_name %>
      <br />
      <%= f.text_field :first_name %>
      <br />
      <%= f.label :last_name %>
      <br />
      <%= f.text_field :last_name %>
      <br />
      <%= f.label :phone %>
      <br />
      <%= f.text_field :phone %>
      <br />
      <%= f.label :time_zone %>
      <br />
      <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, {default: "Eastern Time (US & Canada)"}, class:"browser-default" %>
      <br />
      <br />
      <%= f.submit "Submit", class:'btn' %>
        <br />
      <% end %>
    </div>
  </div>
</div>
