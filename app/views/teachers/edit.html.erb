<h1>Teacher Edit Profile</h1>

<%= form_for(@teacher) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br />
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br />
  <%= f.label :timezone %>
  <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, {default: @teacher[:timezone]}, class:"browser-default" %>
  <small>If TimeZone is changed, your hours of operations will change as well. ex: 9am MT will be 8am PST.</small>
  <br />
  <br />
  <%= f.submit "Submit", class:"btn" %>
<% end %>
