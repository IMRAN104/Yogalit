<div class="container">
  <div class="row">
    <div class="col s12">
      <br />
      <h1>Teacher Profile</h1>
      <p>Teacher Name: <%= "#{@teacher[:first_name].capitalize} #{@teacher[:last_name].capitalize}" %></p>
      <%= link_to "Favorite #{@favorite_teacher_count}", add_favorite_teacher_path(id: @teacher[:id]), class:"btn", method: :post %>
      <br />
      <br />
      <p>Teacher description</p>
      <p>Teacher price ranges</p>
      <p>Teacher Images</p>
      <p>Teacher Videos</p>
      <p>Teacher Holidays</p>
      <p>Teacher Days of week available</p>
      <%= form_tag({controller:"teachers", action:"show", id:@teacher[:id]}, method: :get) do %>
        <%= hidden_field_tag :from_teacher_profile, nil, value:true %>
        <%= hidden_field_tag :id, nil, value:@teacher[:id] %>
        <%= hidden_field_tag :teacher_timezone, nil, value:@teacher[:timezone] %>
        <%= label_tag :date %>
        <%= text_field_tag :session_date, nil, class:"datepicker", type:"date" %><br />
        <%= label_tag :type_of_yoga %>
        <%= select_tag :yoga_type, options_for_select(@teacher_available_yoga_types)%><br />
        <%= label_tag :duration %>
        <%= select_tag :duration, options_for_select(yoga_session_duration_options) %><br />
        <%= label_tag :student_timezone, "Select Your Current Time-Zone" %>
        <%= time_zone_select :student_timezone, nil, ActiveSupport::TimeZone.us_zones, class:"browser-default" %>
        <br />
        <br />
        <%= submit_tag "Search", class:"btn" %>
        <br />
        <br />
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('select').material_select();
    $('.datepicker').pickadate({
      selectMonths: false,
      selectYears: false,
      min: new Date()
    });
  });
</script>
